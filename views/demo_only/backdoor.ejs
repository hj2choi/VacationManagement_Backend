<script>
  var local_servertimems = <%=servertimemillis%>
  function updateServerTime() {
    local_servertimems += 1000
    var element = document.getElementById("time");
    element.innerHTML = (new Date(local_servertimems)).toISOString().split('.')[0]
  }
  setInterval(updateServerTime, 1000)

</script>
